{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "dom",
      "es2023"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@me/mylib": [
        "libs/mylib/src/index.ts"
      ]
    },
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}